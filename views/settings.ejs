<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Market</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <%- include("partials/header") %>
    <main>
        <div class="container">
            <div class="row row_style">
                <div class="col-md-4 col-md-offset-4">
                    <form action="/updateAccount" method="POST" id="settingsForm">
                        <div id="changeAccountInfo">
                            <h4>Account information</h4>
                            <div class="form-group">
                                <b>Name</b>
                                <input type="text" placeholder="<%= settingsName %>" id="settingsName" class="form-control">
                                <b>Surname</b>
                                <input type="text" placeholder="<%= settingsSurname %>" id="settingsSurname" class="form-control">
                            </div>
                            <div class="form-group">
                                <b>Email</b>
                                <input type="text" placeholder="<%= settingsEmail %>" id="settingsEmail" class="form-control settingsInput" name="newEmail">
                                <b>Phone</b>
                                <input type="text" placeholder="<%= settingsPhone %>" id="settingsPhone" class="form-control settingsInput" name="newPhone">
                            </div>
                        </div>
                        <div id="changePassword">
                            <p>
                                <h4>Change Password</h4>
                            </p>
                            <div class="form-group">
                                <b>Old password</b>
                                <input type="password" class="form-control settingsInput" placeholder="Old Password" name="oldPassword" id="oldPassword">
                            </div>
                            <div class="form-group">
                                <b>New password</b>
                                <input type="password" class="form-control settingsInput" placeholder="New Password" name="newPassword" id="newPassword">
                            </div>
                            <div class="form-group">
                                <b>Confirm password</b>
                                <input type="password" class="form-control settingsInput" placeholder="Confirm Password" name="confirmNewPassword" id="confirmNewPassword">
                            </div>
                            <button class="btn btn-primary" id="settingsSaveBtn">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include("partials/footer") %>
    <script src="./settingsForm.js"></script>
</body>

</html>